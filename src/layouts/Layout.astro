---
import "../styles/global.css";
const description = "Blogr is a modern, state-of-the-art blogging platform.";
const siteUrl = "https://blogr.example.com";
const ogImage = "/favicon.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Valentino Solis" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content="Blogr - Modern blogging platform" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <title>Blogr - Modern blogging platform</title>
  </head>
  <body class="flex flex-col min-h-screen min-w-screen font-primary">
    <div class="flex flex-col h-full w-full gap-16 relative z-10">
      <slot />
    </div>
  </body>
</html>
